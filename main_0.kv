
BoxLayout:
    orientation: 'vertical'
    padding: 0
    spacing: 0
		
	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/bg.jpg'
		
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            cols: 2
            Label:
                text: 'Line Speed'
				font_name: './fonts/HWYGWDE.ttf'
                font_size: 25
            Label:
                text: ''
                font_size: 20
                size_hint_x: 1.7
        GridLayout:
            orientation: 'vertical'
            cols: 2
            Label:
                text: ''
                id: lb_00
                font_size: 200
				font_name: './fonts/HWYGOTH.ttf'
                markup: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.3
                Label:
                    text: ''
                Label:
                    valign: 'bottom'
                    text: '[color=88EC1F]m/min[/color]'
                    font_size: 30
                    markup: True

    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            cols: 2
            Label:
                text: 'Lineal Remaining'
                font_size: 25
				font_name: './fonts/HWYGWDE.ttf'
            Label:
                text: ''
                size_hint_x: 1.2
                font_size: 20
        GridLayout:
            orientation: 'vertical'
            cols: 2
            Label:
                text: ''
                id: lb_02
                font_size: 200
				font_name: './fonts/HWYGOTH.ttf'
                markup: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.3
                Label:
                    text: ''
                Label:
                    valign: 'bottom'
                    text: '[color=88EC1F]m[/color]'
                    font_size: 30
                    markup: True

	
    GridLayout:
		cols: 3
		Label:
            size_hint_y: None
            id: lb_time
            text: ''
            font_size: 40
			font_name: './fonts/HWYGWDE.ttf'
        Label:
            size_hint_y: None
            id: lb_date
            text: ''
            font_size: 30
			font_name: './fonts/HWYGWDE.ttf'
		
